<%= render 'admin/shared/flash_messages' %>

<h4 class="page-header">新闻管理</h4>

<div class="row">
  <div class="col-md-12">
    <%= link_to '创建新闻', new_admin_info_path, class: "btn btn-primary btn-sm" %>
  </div>
</div>

<table class="table table-hover infos-table">
  <thead>
    <tr>
      <th>标题</th>
      <th>创建日期</th>
      <th colspan="2">功能</th>
    </tr>
  </thead>

  <tbody>
    <% @infos.each do |info| %>
    <tr>
      <td><%= link_to info.title, admin_info_path(info) %></td>
      <td><%= info.created_at.strftime('%Y年%m月%d日') %></td>
      <td><%= link_to '修改', edit_admin_info_path(info) %></td>
      <td><%= link_to '删除', admin_info_path(info), method: :delete, data: { confirm: '确认删除?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

